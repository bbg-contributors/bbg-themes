{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "theme_list": {
      "type": "array",
      "items": {
        "type": "object",
        "title": "The theme list",
        "description": "The theme list",
        "required": [
          "name",
          "intro",
          "download_url",
          "author",
          "author_url",
          "license",
          "last_tested_on_bbg_version",
          "compatible_with_newer_bbg_version",
          "compatible_with_older_bbg_version",
          "is_example_theme"
        ],
        "defaultSnippets": [
          {
            "label": "A new theme",
            "description": "The information about the new theme",
            "body": {
              "name": "$1",
              "intro": "$2",
              "download_url": "$3",
              "author": "$4",
              "author_url": "$5",
              "license": "$6",
              "last_tested_on_bbg_version": "$7",
              "compatible_with_newer_bbg_version": "$8",
              "compatible_with_older_bbg_version": "$9",
              "is_example_theme": "$10"
            }
          }
        ],
        "properties": {
          "name": {
            "type": "string",
            "title": "Theme Name",
            "description": "The name of the theme"
          },
          "intro": {
            "type": "string",
            "title": "Theme Introduction",
            "description": "The introduction to the theme"
          },
          "download_url": {
            "type": "string",
            "title": "Theme Download URL",
            "description": "The download URL for the theme"
          },
          "author": {
            "type": "string",
            "title": "Your Name",
            "description": "The author of the theme, only accept one"
          },
          "author_url": {
            "type": "string",
            "title": "Your Link",
            "description": "Your website or social media account link"
          },
          "license": {
            "type": "string",
            "title": "License",
            "description": "The license of the theme"
          },
          "last_tested_on_bbg_version": {
            "type": "number",
            "description": "The version you last tested your theme"
          },
          "compatible_with_newer_bbg_version": {
            "type": "boolean",
            "title": "Compatiblity of New BBG Versions",
            "description": "Whether compatible with new version"
          },
          "compatible_with_older_bbg_version": {
            "type": "boolean",
            "title": "Compatiblity of Old BBG Versions",
            "description": "Whether compatible with old version"
          },
          "is_example_theme": {
            "type": "boolean",
            "title": "Example Theme Mark",
            "description": "If you set true, your theme may not be shown in the final theme store because it means you just test."
          }
        }
      }
    }
  }
}